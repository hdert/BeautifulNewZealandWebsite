mixin formInput(codeName, FrontEndName, placeholder, type, required)
  if required == true
    .mb-3.form-floating
      input.form-control(
        id=codeName,
        name=codeName,
        type=type,
        placeholder=placeholder,
        required
      )
      label.form-label(for=codeName)= FrontEndName
  else
    .mb-3.form-floating
      input.form-control(
        id=codeName,
        name=codeName,
        type=type,
        placeholder=placeholder
      )
      label.form-label(for=codeName)= FrontEndName

doctype html
html(lang="en")
  include ../includes/head.pug
  +head
  body#fern.col-xl-8
    include ../includes/header.pug
    +header("contact")
    .container.mb-4.mt-2
      h1 Contact Us
      p Please leave us your comments or questions about Beautiful New Zealand.
      #formContainer.d-flex.justify-content-center
        form.col-8(onsubmit="return false")
          +formInput("firstname", "First Name", "Joe", "text", true)
          +formInput("lastname", "Last Name", "Smith", "text", true)
          +formInput("email", "Email", "joesmith@example.com", "email", true)
          +formInput("phonenum", "Phone Number", "027123456789", "tel", false)
          +formInput("dateofbirth", "Date of Birth", "2000-01-01", "date", false)
          .mb-3.form-floating 
            textarea#message.form-control(
              name="message",
              type="text",
              placeholder="Leave a comment here",
              styles="height: 500px;"
            )
            label(for="message") Comments
          .mb-3.form-check
            input#agreetotos.form-check-input(
              type="checkbox",
              name="agreetotos",
              required
            )
            label(for="agreetotos") I Agree to the Terms of Service
          button#submitButton.btn.btn-primary(type="submit", value="Submit") Submit

    include ../includes/footer.pug
    +footer
